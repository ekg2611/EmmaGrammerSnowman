import java.awt.Dimension;
import java.awt.FlowLayout;

import javax.swing.JFrame;
import javax.swing.JTextField;

public class SwingFlowLayout extends JFrame {
	private JTextField [] textField = new JTextField [4]; 
	
	public SwingFlowLayout(){
		textField[0] = new JTextField(15);
		textField[1] = new JTextField(15);
		textField[2] = new JTextField(15);
		textField[3] = new JTextField(15);
		setLayout(new FlowLayout());
		add(textField[0]);
		add(textField[1]);
		add(textField[2]);
		add(textField[3]);
		
		setVisible(true);
		setSize(new Dimension(500,500));
	}
}
