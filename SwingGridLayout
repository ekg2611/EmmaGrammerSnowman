import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JTextField;

public class SwingGridLayout extends JFrame {
	private JTextField [] textField = new JTextField [4];
	
	public SwingGridLayout(){
		
		textField[0] = new JTextField(15);
		textField[1] = new JTextField(15);
		textField[2] = new JTextField(15);
		textField[3] = new JTextField(15);
		setLayout(new GridLayout(2,2));
		
		add(textField[0]);
		add(textField[1]);
		add(textField[2]);
		add(textField[3]);
		
		setVisible(true);
		setSize(new Dimension(500,500));
	}
}
